set -e
set -x

BUILD_DIR=$1
CACHE_DIR=$2

ARCHIVE=firefox-68.0.2.tar.bz2
mkdir -p $CACHE_DIR
cd $CACHE_DIR
if ! [ -e "${ARCHIVE}" ]; then
  wget "http://ftp.mozilla.org/pub/firefox/releases/68.0.2/linux-$(uname -m)/en-US/${ARCHIVE}"
  tar -xjf "${ARCHIVE}"
fi
mkdir -p $BUILD_DIR/vendor
cp -r $CACHE_DIR/firefox $BUILD_DIR/vendor/
